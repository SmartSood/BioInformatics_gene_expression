generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

generator py_client {
  provider = "prisma-client-py"
  output   = "../generated/prisma-python"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int           @id @default(autoincrement())
  email          String        @unique
  name           String
  degree         String
  field          String
  university     String
  graduationYear Int
  password       String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  runs           TrainingRun[]
}

model TrainingRun {
  id         String   @id // RQ job_id
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  status     String // queued | started | finished | failed
  datasetUri String
  modelPath  String?
  metrics    Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
